<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5.0dip"


        >


        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="fill_parent"
            android:layout_height="250.0dip"
            android:layout_gravity="center"
            android:background="#ffe1e1e1"
            android:columnCount="3"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewSales"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_btn_speak_now" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:text="Sales Order"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewInvoice"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@+id/imageView01"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_menu_directions" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:text="Sales Invoice"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewCollection"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_menu_agenda" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="Collection"
                        android:fontFamily="casual"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewVoucher"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_menu_compass" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="Voucher"
                        android:fontFamily="casual"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewReport"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@+id/imageView001"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_menu_gallery" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:text="Report"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewDataUpdate"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_rowWeight="1.0"
                android:layout_columnWeight="1.0"
                android:layout_margin="0.30000007dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="4.0">

                    <ImageView
                        android:id="@+id/imageView100"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="3.0"
                        android:padding="25.0dip"
                        android:src="@android:drawable/ic_menu_always_landscape_portrait" />

                    <TextView
                        android:id="@id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:text="Data Update"
                        android:textColor="#ff7b7b7b" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </GridLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/secondLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"

                >

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip">


        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>

